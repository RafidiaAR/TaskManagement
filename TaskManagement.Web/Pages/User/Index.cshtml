@page "/User"
@model UserModel
@{
}

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" href="/User/Create">Add New User</a>
    </div>
</div>

<table class="table" id="userTable">
    <thead>
        <tr>
            <th>Username</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Division</th>
            <th>Last Login</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserData)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Division</td>
                <td>@item.LastLogin.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td style="white-space:nowrap">
                    <a href="/User/Edit?id=@item.UserID" class="btn btn-info">Edit</a>
                    <a href="@Url.Action("Delete", "User", new { id = item.UserID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                paging: true,
                searching: true
            });
        });
    </script>
}