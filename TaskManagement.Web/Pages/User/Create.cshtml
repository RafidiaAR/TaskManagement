@page
@model TaskManagement.Web.Pages.User.CreateModel
@{
}

<div class="container mt-1s">
    <h4 class="text-center mb-4">Create User</h4>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="form-group row mb-3">
                    <label for="Username" class="col-sm-4 col-form-label">Username</label>
                    <div class="col-sm-8">
                        <input type="text" id="Username" name="Username" class="form-control" value="" required />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="FullName" class="col-sm-4 col-form-label">Full Name</label>
                    <div class="col-sm-8">
                        <input type="text" id="FullName" name="FullName" class="form-control" value="" required />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="Email" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <input type="email" id="Email" name="Email" class="form-control" value="" required />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="Division" class="col-sm-4 col-form-label">Division</label>
                    <div class="col-sm-8">
                        <input type="text" id="Division" name="Division" class="form-control" value="" required />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="Password" class="col-sm-4 col-form-label">Password</label>
                    <div class="col-sm-8">
                        <input type="password" id="Password" name="Password" class="form-control" minlength="6" required />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-8 offset-sm-4">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>